{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "esnext"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*.ts",
        "src/server.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}